<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="2dp" 
    android:layout_marginLeft="2dp" 
    android:layout_marginRight="2dp" 
    android:layout_marginTop="2dp" 
    android:layout_marginBottom="2dp" 
    android:background="@drawable/background">
	<RelativeLayout 
		android:layout_width="fill_parent" 
		android:layout_height="90dp" 
		android:id="@+id/titlebar" 
		android:layout_alignParentTop="true" 
		android:paddingTop="3dp" 
		android:paddingBottom="3dp">
		<ImageButton 
			android:id="@+id/favoriteBtn" 
			android:layout_alignParentLeft="true" 
			android:layout_height="55dp" 
			android:layout_width="55dp" 
			android:src="@drawable/favorited" 
			android:layout_centerVertical="true"/>
 		<TextView 
 			android:layout_width="wrap_content" 
 			android:id="@+id/txtTitle" 
 			android:textSize="23dp"
 			android:layout_toRightOf="@+id/favorateBtn" 
 			android:layout_centerInParent="true" 
 			android:layout_height="fill_parent" 
 			android:gravity="center_vertical|center_horizontal" 
 			android:textStyle="bold"/>
	
	</RelativeLayout>
	<ScrollView
		android:layout_height="fill_parent" 
 		android:layout_width="fill_parent"
 		android:layout_below="@+id/titlebar"
 		android:layout_above="@+id/relativeLayout1" >
		<TextView 
		 	android:layout_height="wrap_content" 
		 	android:layout_width="fill_parent" 
		 	android:padding="20dp"
		 	android:textSize="20dp"
		 	android:id="@+id/txtContent" />
	</ScrollView>
 	<RelativeLayout 
 		android:layout_height="64dp" 
 		android:layout_width="fill_parent" 
 		android:id="@+id/relativeLayout1" 
 		android:layout_alignParentBottom="true" 
 		android:layout_alignParentLeft="true" 
 		android:layout_marginTop="2dp" 
 		android:paddingBottom="5dp" 
 		android:paddingTop="5dp">
     	<ImageButton 
     		android:id="@+id/prevBtn" 
     		android:layout_height="match_parent" 
     		android:layout_alignParentTop="true" 
     		android:background="@drawable/btnstyle2" 
     		android:layout_alignParentLeft="true" 
     		android:layout_width="80dp" android:layout_marginLeft="10dp"/>
     	<ImageButton 
     		android:background="@drawable/btnstyle1" 
     		style="@drawable/btnstyle1" 
     		android:layout_height="match_parent" 
     		android:layout_alignParentTop="true" 
     		android:id="@+id/nextBtn" 
     		android:layout_alignParentRight="true" 
     		android:layout_width="80dp" android:layout_marginRight="10dp"/>
     	<ImageButton 
     		android:layout_height="match_parent" 
     		android:layout_alignParentTop="true" 
     		android:id="@+id/randomBtn" 
     		android:layout_centerInParent="true" 
     		android:background="@drawable/btnstyle3" 
     		android:layout_width="64dp"/>
 	</RelativeLayout>       
</RelativeLayout>
